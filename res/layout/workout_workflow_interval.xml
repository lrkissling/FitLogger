<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:id="@+id/llWorkoutWorkflowIntervalDistanceLayoutContainer"
   	android:layout_width="fill_parent"
   	android:layout_height="fill_parent"
   	android:orientation="vertical"
   >		
   
    <LinearLayout 
        android:id="@+id/llWorkoutWorkflowIntervalNameContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
    	<TextView
    		android:id="@+id/tvWorkoutWorkflowIntervalCurrentIntervalLabel"    
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Current Interval:"
   			android:gravity="center_vertical|center_horizontal" 		
    	/>
    	
    	<TextView 
		  	android:id="@+id/tvWorkoutWorkflowIntervalDistanceExerciseName"
		  	android:layout_width="match_parent"
		  	android:layout_height="wrap_content"
			android:gravity="center_vertical|center_horizontal"
		  	android:text="Exercise Name"
		/>
        
    </LinearLayout>
	
	<TextView 
	    android:id="@+id/tvWorkoutWorkflowIntervalDistanceIntervalsToDo"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical|center_horizontal"
	    android:padding="10dip"
	    android:text="Intervals To Do"
	/>
	
	<LinearLayout
	  	android:id="@+id/llWorkoutWorkflowIntervalDistanceInput"
	  	android:layout_width="match_parent"
		android:layout_height="wrap_content"  	
		android:orientation="horizontal"
	>
	    <TextView
		  	android:id="@+id/tvWorkoutWorkflowIntervalDistanceInputLabel"
		  	android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
		 	android:text="Distance"
		 	android:layout_weight="33"
		 	android:gravity="center"
		/>				
		<EditText 
			android:id="@+id/etWorkoutWorkflowIntervalDistanceInputEntry"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="5"    
			android:singleLine="true"
			android:layout_weight="33"
		/>				
		<TextView
		  	android:id="@+id/tvWorkoutWorkflowIntervalDistanceInputUnits"
		  	android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"  
		  	android:text="Units"
		  	android:layout_weight="33"
		  	android:gravity="center"
		/>			    
    </LinearLayout>
    
	<LinearLayout 
	    android:id="@+id/llWorkoutWorkflowIntervalTimeInput"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	>
	    <TextView 
	  		android:id="@+id/tvWorkoutWorkflowIntervalTimer"
	  		android:layout_width="match_parent"
	  		android:layout_height="wrap_content"
			android:gravity="center_vertical|center_horizontal"
			android:text="Interval Time\t XX:XX"
			android:padding="15dip"
		/>
	    
	    <Button 
	    	android:id="@+id/btnWorkoutWorkflowIntervalStartStop"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:text="Start/Stop"
	    />
	</LinearLayout> 
	
	<Button 
		android:id="@+id/btnWorkoutWorkflowIntervalRecord"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="10dip"
		android:paddingTop="10dip"
		android:text="Record Interval And Go to Next Interval"
	/>

    <TableLayout 	
	    android:id="@+id/tlWorkoutWorkflowIntervalDistanceHistoryNoteRow"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:stretchColumns="*"
       	android:paddingBottom="10dip"
		android:paddingTop="10dip"
    >
	</TableLayout>
	
	<TextView 
		android:id="@+id/tvWorkoutWorkflowIntervalDistanceNextIntervalLabel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Remaining Intervals in Set" 
	/>
	
	<TableLayout
		android:id="@+id/tlWorkoutWorkflowIntervalNextIntervalList"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:stretchColumns="*"
	/>
	    
	

</LinearLayout>

