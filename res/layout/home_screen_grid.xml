<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llHomeScreenGridContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"	    
>
    <LinearLayout
        android:id="@+id/llHomeScreenRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:orientation="horizontal"
    >
   	
        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/gvHomeScreenGrid1"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:padding="5dp"
		    android:verticalSpacing="5dp"
		    android:horizontalSpacing="20dp"
		    android:numColumns="auto_fit"
		    android:columnWidth="60dp"
		    android:stretchMode="columnWidth"
		    android:gravity="center_vertical"
    	    android:background="#000000"
    	 />
	
    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/llHomeScreenRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:orientation="horizontal"
    >
   	
        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/gvHomeScreenGrid2"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:padding="5dp"
		    android:verticalSpacing="5dp"
		    android:horizontalSpacing="20dp"
		    android:numColumns="auto_fit"
		    android:columnWidth="60dp"
		    android:stretchMode="columnWidth"
		    android:gravity="center_vertical"
		    android:background="#000000"
    	 />
	
    </LinearLayout>
    
   <LinearLayout
        android:id="@+id/llHomeScreenRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:orientation="horizontal"
        android:gravity="bottom"
    >
   	
        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/gvHomeScreenGrid3"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:padding="5dp"
		    android:verticalSpacing="5dp"
		    android:horizontalSpacing="20dp"
		    android:numColumns="auto_fit"
		    android:columnWidth="60dp"
		    android:stretchMode="columnWidth"
		    android:gravity="center_vertical" 
       		android:background="#000000"
    	 />
	
    </LinearLayout>
    
    
    
</LinearLayout>
