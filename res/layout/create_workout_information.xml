<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/LLCreateWorkoutInfo" >
    
    <TextView 
        android:id="@+id/tvCreateWorkoutWorkoutName"
        android:text="@string/workoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    
    <EditText 
        android:id="@+id/etCreateWorkoutName"
        android:hint="@string/workoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    
    <TextView
      	android:id="@+id/tvCreateWorkoutType"
      	android:text="@string/workoutType"  
      	android:layout_width="match_parent"
      	android:layout_height="wrap_content"
    />
    
    <Spinner 
        android:id="@+id/spnWorkoutType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/workoutType"
    />

</LinearLayout>