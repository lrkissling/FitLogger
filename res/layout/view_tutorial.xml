<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svViewTutorial"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <LinearLayout
        android:id="@+id/llViewTutorial"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="something went wrong" />

        <RadioGroup
            android:id="@+id/rgTutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <RadioButton
                android:id="@+id/rbTutCW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight=".25"
                android:checked="true"
                android:text="Create Workout"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rbTutEW"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Edit Workout"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rbTutCE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight=".25"
                android:text="Create Exercise"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rbTutEE"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Edit Exercise"
                android:textSize="10sp" />

        </RadioGroup>
        
        <TextView
            android:id="@+id/tvTutorial2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="something went wrong"
            android:visibility="gone" />
        
    </LinearLayout>
</ScrollView>